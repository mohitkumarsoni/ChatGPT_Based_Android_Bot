<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatBotMohit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/dark1</item>
        <item name="colorSecondary">@color/light2 </item>
        <item name="colorOnPrimary">@color/dark1</item>
    </style>

    <style name="chatTextHuman">
        <item name="android:background">@drawable/chat_human_outline_bg</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">20sp</item>
        <item name="android:textColor">@color/light2</item>
        <item name="android:fontFamily">@font/new_x_digital_tfb</item>
    </style>

    <style name="chatTextBot">
        <item name="android:background">@drawable/chat_bot_outline_bg</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/light1</item>
        <item name="android:fontFamily">@font/new_x_digital_tfb</item>
    </style>

    <style name="background">
        <item name="android:background">@color/light1</item>
    </style>

    <style name="inputEditText">
        <item name="android:textColor">@color/light1</item>
        <item name="android:background">@drawable/text_input_bg</item>
        <item name="android:fontFamily">@font/new_x_digital_tfb</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="my_action_bar_style">
        <item name="android:fontFamily">@font/new_x_digital_tfb</item>
    </style>


    <style name="Theme.ChatBotMohit" parent="Base.Theme.ChatBotMohit" />

</resources>